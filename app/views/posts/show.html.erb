<div class="hero-unit">
  <h1><%= @post.title %></h1>
</div>


	<div class = "post">		  		
  		<h2>Tema:</h2>
		<p><%= @post.content %></b>
	</div>

<div class="row-fluid">
  <div class="span12">
   
    <h2>Comentarios de visitantes</h2>
    <hr>
   
      
        <%= simple_form_for([@post, @post.comments.build]) do |f| %>
          <div class="field">
          <%=f.input :visitor, :label => 'Autor: '  %><br />
          
          </div>
          <div class="field">
          <%= f.input :message, :label => 'Escriba su comentario' %><br />
         
          </div>
          <div class="actions">
          <%= f.button :submit %>
          </div>
        <% end %>
      
    
      <% @comments = Comment.all(:order => "created_at DESC", :conditions => ["created_at <= ?", Time.now]) %>
      
      <% @post.comments.each do |comment| %>
          <div class ="comments">
              <p>
              <b>Visitante:</b>
              <%= comment.visitor %>
              </p>
              <p>
              <b>Comment:</b>
              <%= comment.message %> 
            </div>
        <% end %>
      
 
  </div>
</div>

	
  		 
